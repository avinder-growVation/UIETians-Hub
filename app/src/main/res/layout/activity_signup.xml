<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_back"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/ic_launcher"
            android:scaleType="fitXY"
            app:srcCompat="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18sp"
                android:alpha="0.4"
                android:background="@drawable/bg_oval_white"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingLeft="18sp"
                android:paddingRight="18sp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="#000"
                android:textColorHint="#222"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:alpha="0.4"
                android:background="@drawable/bg_sign_up_spinner" />

            <Spinner
                android:id="@+id/spSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:alpha="0.4"
                android:background="@drawable/bg_sign_up_spinner" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:alpha="0.4"
                android:background="@drawable/bg_oval_white"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/montserrat_semi_bold"
                android:paddingLeft="18sp"
                android:paddingRight="18sp"
                android:textColor="#000"
                android:textColorHint="#222"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:alpha="0.4"
                android:background="@drawable/bg_oval_white"
                android:ems="10"
                android:hint="Password"
                android:fontFamily="@font/montserrat_semi_bold"
                android:inputType="textPassword"
                android:paddingLeft="18sp"
                android:paddingRight="18sp"
                android:textColor="#000"
                android:textColorHint="#222"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnSignUp"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="@font/montserrat_bold"
        android:alpha="0.8"
        android:background="@drawable/bg_oval_blue"
        android:text="Sign up"
        android:textColor="#fff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnSignUp"
        android:background="@null"
        android:text="Already have an account? Login here"
        android:fontFamily="@font/montserrat"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignIn"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="Forgot Password"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorAccent" />

</RelativeLayout>
</ScrollView>