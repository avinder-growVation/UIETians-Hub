<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_spinner">

    <ImageView
        android:id="@+id/ivName"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/ic_faculty_user"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivName"
        android:layout_toRightOf="@+id/ivName"
        android:layout_toLeftOf="@+id/tvPosition"
        android:layout_toStartOf="@id/tvPosition"
        android:paddingLeft="9dp"
        android:paddingTop="18dp"
        android:paddingRight="9dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat"
        android:textColor="#111"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="18dp"
        android:fontFamily="@font/montserrat"
        android:textColor="#111"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/ivMail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/tvMail"
        android:layout_toLeftOf="@+id/tvMail"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/tvMail"
        android:background="@drawable/ic_mail"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/tvMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvContact"
        android:layout_alignBottom="@+id/tvContact"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName"
        android:layout_alignTop="@+id/tvContact"
        android:layout_toLeftOf="@+id/tvContact"
        android:layout_toStartOf="@id/tvContact"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textIsSelectable="true"
        android:fontFamily="@font/montserrat"
        android:textColor="#111"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/ivMail"
        android:layout_toLeftOf="@+id/tvContact"
        android:layout_toStartOf="@+id/tvContact"
        android:background="@drawable/ic_phone"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tvName"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:textIsSelectable="true"
        android:fontFamily="@font/montserrat"
        android:textColor="#111"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tvCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_rounded_button"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="13sp"
        android:elevation="5dp"
        android:layout_below="@id/tvContact"/>

</RelativeLayout>